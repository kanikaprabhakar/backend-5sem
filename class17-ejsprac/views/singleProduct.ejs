<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- <title><%= product.name %></title> -->
    <style>
        body {
            background: #f5f5f5;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        header {
            background: #007bff;
            color: #fff;
            padding: 1.5rem 0;
            text-align: center;
        }
        main {
            max-width: 600px;
            margin: 2rem auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 2rem;
        }
        section {
            margin-bottom: 1.5rem;
        }
        h2 {
            color: #007bff;
            margin-bottom: 0.5rem;
        }
        p {
            color: #333;
            font-size: 1.1rem;
        }
        .price {
            color: #28a745;
            font-weight: bold;
            font-size: 1.3rem;
        }
        .discounts {
            display: flex;
            gap: 2rem;
            justify-content: center;
            margin: 2rem 0;
        }
        .discounts form {
            background: #f8f9fa;
            padding: 1rem 2rem;
            border-radius: 8px;
            box-shadow: 0 1px 4px rgba(0,0,0,0.05);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        input[type="checkbox"] {
            accent-color: #007bff;
            width: 20px;
            height: 20px;
        }
        label {
            font-weight: 500;
            color: #555;
        }
        footer {
            background: #222;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            margin-top: 3rem;
        }
    </style>
</head>
<body>
    <header>
        <h1><%= product.name %></h1>
    </header>
    <main>
        <div class="product-container">
            <h2>Description</h2>
            <p><%= product.description %></p>
        </div>
        <section>
            <h2>Price</h2>
            <p id="price">$<%= product.price %></p>
        </section>
        <div class="discount-form" id="gold-form">
            <input onclick= "goldForm(e)" name="gold" id="<%= product._id %>" type="checkbox">
            <label for="gold">Apply Gold</label>
        </div>
        <div class="discount-form" id="platinum-form">
            <input onclick= "platinumForm(e)" name="platinum" id="<%= product._id %>" type="checkbox">
            <label for="platinum">Apply Platinum</label>
        </div>
    </main>
    <footer>
        <p>&copy; 2023 My E-Commerce Site</p>
    </footer>


    <script>
    const price = document.getElementById("price");
    const goldInput = document.getElementsByName("gold")[0];

    goldInput.addEventListener("change", async function(e) {
        const checkbox = e.target;
        const productId = checkbox.id;
        const isChecked = checkbox.checked;

        if (isChecked) {
            let res = await axios.get(`http://localhost:3000/user/discount/gold/${productId}`);
            let discountPrice = res.data.discountedprice;

            price.style.textDecoration = `line-through`;
            price.style.color = `gray`;
            price.innerText = `$${discountPrice}`;
        } else {
            price.style.textDecoration = `none`;
            price.style.color = `#28a745`;
            price.innerText = `$<%= product.price %>`;
        }
    });


        async function platinumForm(e) {
            
        }
    </script>
</body>
</html>
